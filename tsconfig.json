{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,

        "allowJs": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,

        "baseUrl": "./",
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
